<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block title %}enhavo{% endblock %}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <meta name="robots" content="noindex, nofollow">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
        {{ vite_css_tags('entrypoints/application.js', 'admin') }}
    {% endblock %}
</head>
<body>
{% block content %}
    <div id="app"
         data-controller="{% block controller %}{{ controller }}{% endblock %}"
         data-application-application-value="{% block application %}{{ application }}{% endblock %}"
         data-application-component-value="{% block component %}{{ component }}{% endblock %}"
    ></div>
{% endblock %}
{% if data is defined %}
    <script id="data" type="application/json">{{ data|json_encode|raw }}</script>
{% endif %}
{% if routes is defined %}
    <script id="routes" type="application/json">{{ routes|raw }}</script>
{% endif %}
{% if translations is defined %}
    <script id="translations" type="application/json">{{ translations|json_encode|raw }}</script>
{% endif %}
{% block javascripts %}
    {{ vite_js_tags('entrypoints/application.js', 'admin') }}
    {{ vite_js_preload_tags('entrypoints/application.js', 'admin') }}
{% endblock %}
</body>
</html>