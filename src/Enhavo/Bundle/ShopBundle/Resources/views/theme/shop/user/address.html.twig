{% extends template('theme/base.html.twig') %}

{% trans_default_domain 'EnhavoShopBundle' %}

{% block main %}
    <form method="post" novalidate>
        {{ form_row(form.billingAddress) }}
        {{ form_row(form.sameAddress) }}
        {{ form_row(form.shippingAddress) }}
        {{ form_row(form._token) }}
        <button type="submit">{{ 'form.button.save'|trans }}</button>
    </form>
{% endblock %}