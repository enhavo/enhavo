{% extends template('theme_base') %}

{% block bodyclass %}light{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/bundles/enhavoshop/js/Shop.js') }}" type="text/javascript"></script>
{% endblock %}

{% block main %}
    <div class="product-single-view">
        <div class="container">
            <div class="row shop-product">
                <div class="col-md-6 col-sm-7">
                    {{ widget_render('shop_product_configurator', {
                        product: product,
                        template: 'EnhavoDemoBundle:Theme/Widget:product-configurator.html.twig'
                    }) }}
                    <a href="{{ path('enhavo_shop_theme_cart_summary') }}" class="btn rounded aubergine proceed">Proceed</a>
                </div>
                <div class="col-md-6 col-sm-5">
                    {% if product.picture %}
                        <div class="product-picture">
                            <img src="{{ media_url(product.picture) }}" />
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <a href="{{ path('enhavo_demo_theme_shop_index') }}" class="back-to-blog"><i class="icon-forward"></i></a>
    </div>
{% endblock %}