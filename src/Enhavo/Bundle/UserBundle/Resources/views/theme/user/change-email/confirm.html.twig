{% extends template('theme/base.html.twig') %}

{% block main %}
    <form action="{{ path('enhavo_user_theme_change_email_confirm', {token: token}) }}" method="POST">
        {{ form_row(form._token) }}
        {{ form_row(form.currentPassword) }}
        {{ form_row(form.email) }}
        <button type="submit">{{ 'change_email.form.submit'|trans }}</button>
    </form>
{% endblock %}
