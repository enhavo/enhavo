{% extends template('theme/base.html.twig') %}
{% trans_default_domain 'EnhavoUserBundle' %}

{% block main %}
    <div>Current Email-Address: {{ app.user.email }}</div>
    <form action="{{ path('enhavo_user_theme_change_email_request') }}" method="POST">
        {{ form_row(form.email) }}
        {{ form_row(form.current_password) }}
        <button type="submit">{{ 'change_email.form.submit'|trans }}</button>
        {{ form_row(form._token) }}
    </form>
{% endblock %}
