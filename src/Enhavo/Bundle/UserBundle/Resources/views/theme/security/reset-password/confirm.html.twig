{% extends template('theme/base.html.twig') %}
{% trans_default_domain 'EnhavoUserBundle' %}

{% block main %}
    <form action="{{ path("enhavo_user_theme_reset_password_confirm", {'token': token}) }}" method="POST">
        {{ form_row(form.plainPassword) }}
        <button type="submit">{{ 'reset_password.confirm.submit'|trans|nl2br }}</button>
        <a href="{{ path('enhavo_user_theme_security_login') }}">{{ 'reset_password.label.login'|trans|nl2br }}</a>
        {{ form_row(form._token) }}
    </form>
{% endblock %}
