{% trans_default_domain 'EnhavoUserBundle' %}

<div id="login-box">
    <div class="login-container">
        <form action="{{ path("enhavo_user_theme_security_login") }}" method="post">
            {% if error %}
                <div class="col-md-push-2 col-md-4 error loginMessage" id="overlayMessage" style="display: block;">
                    <div>{{ 'login.error.credentials'|trans|nl2br }}</div>
                </div>
            {% endif %}

            <input type="hidden" id="remember_me" name="_remember_me" value="on">
            <div class="mb1">
                <div class="input-container">
                    <input placeholder="{{ 'security.login.username'|trans }}" type="text" id="email" name="_email" value="{{ last_username }}" autofocus />
                </div>
            </div>
            <div class="mb1">
                <div class="input-container">
                    <input placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <input type="checkbox" id="_remember" name="_remember">
                    <span></span>
                    <label for="_remember">{{ 'security.login.remember_me'|trans|nl2br }}</label>
                </div>
                <div class="col-sm-6 col-xs-12 reset">
                    <a href="{{ path('enhavo_user_theme_reset_password_request') }}">{{ 'reset_password.request.submit'|trans|nl2br }}</a>
                    <a href="{{ path('enhavo_user_theme_registration_register') }}">{{ 'registration'|trans|nl2br }}</a>
                </div>
            </div>
            <button class="btn loginButton" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans|nl2br }}</button>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% if failurePath %}
                <input type="hidden" name="_failure_path" value="{{ failurePath }}" />
            {% endif %}
        </form>
    </div>
</div>
