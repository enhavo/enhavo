{% extends template('theme/base.html.twig') %}

{% trans_default_domain 'EnhavoUserBundle' %}

{% block main %}
    <div>Current Email-Address: {{ app.user.email }}</div>
    <form action="{{ path("enhavo_user_theme_user_profile") }}" method="POST">
        {{ form_widget(form) }}
        <button type="submit">Save</button>
    </form>

    <div><a href="{{ path('enhavo_user_theme_change_email_request') }}">Change E-Mail</a></div>
    <div><a href="{{ path('enhavo_user_theme_change_password_change') }}">Change Password</a></div>
    <div><a href="{{ path('enhavo_user_theme_delete_confirm') }}">Delete Account</a></div>
    {% if not app.user.verified %}
        <div><a href="{{ user_verify_path() }}">Verify Account</a></div>
    {% endif %}
{% endblock %}
