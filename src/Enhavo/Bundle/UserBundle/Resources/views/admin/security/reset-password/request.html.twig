{% extends template('admin/security/base.html.twig') %}

{% trans_default_domain 'EnhavoUserBundle' %}

{% block form %}
    <form action="{{ path("enhavo_user_reset_password_request") }}" method="post" novalidate>
        <div class="input-container mb1">
            <input placeholder="{{ 'security.login.username'|trans({}, 'EnhavoUserBundle') }}" type="text" id="{{ form.username.vars.id }}" name="{{ form.username.vars.full_name }}" value="" required="required" />
        </div>
        <button class="btn loginButton" type="submit" id="_submit" name="_submit">{{ 'reset_password.request.submit'|trans }}</button>
        <div class="reset">
            <button class="btn resetButton"><a href="{{ path('enhavo_user_security_login') }}">{{ 'reset_password.label.login'|trans }}</a></button>
        </div>
        {{ form_row(form._token) }}
    </form>
{% endblock %}

