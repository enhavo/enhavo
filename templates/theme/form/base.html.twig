<!DOCTYPE html>
<html>
    <head>
        {% block head %}{% endblock %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            {% block form %}{% endblock %}
            <div data-controller="vue_form" data-vue_form-form-value="{{ vue|json_encode|e }}" data-vue_form-theme-value="{% if theme%}true{% else %}false{% endif %}">
                {% block app %}
                    <form-form :form="form"></form-form>
                {% endblock %}
            </div>
            <hr>
            <pre id="data">{{ data|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('base', null, webpack_build()) }}
        {% endblock %}
    </body>
</html>
