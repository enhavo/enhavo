{% if view.getParameter('tabs') %}
    <div class="row mb1em tabContainer">
        <div class="offset2 span9">
            {% for tab in view.getParameter('tabs') %}
                <a href="#" tabId="tab{{ loop.index }}">{{ tab.label|trans }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="tabContentContainer mb1em pv1em">
        {% for tab in view.getParameter('tabs') %}
            <div id="tab{{ loop.index }}">
                {% include tab.template %}
            </div>
        {% endfor %}
    </div>
{% else %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endif %}





